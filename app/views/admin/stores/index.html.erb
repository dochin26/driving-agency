<div class="min-h-screen bg-base-200">
  <%= render "shared/navbar" %>

  <div class="container mx-auto p-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">店舗管理</h1>
      <%= link_to "新規登録", new_admin_store_path, class: "btn btn-primary" %>
    </div>

    <% if @stores.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @stores.each do |store| %>
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h2 class="card-title"><%= store.name %></h2>
              <p class="text-gray-600"><%= store.address %></p>

              <% if store.latitude && store.longitude %>
                <div class="mt-2">
                  <%= link_to "📍 地図で見る", "https://www.google.com/maps?q=#{store.latitude},#{store.longitude}",
                      target: "_blank", class: "link link-primary text-sm" %>
                </div>
              <% end %>

              <div class="card-actions justify-end mt-4">
                <%= link_to "編集", edit_admin_store_path(store), class: "btn btn-sm btn-warning" %>
                <%= button_to "削除", admin_store_path(store), method: :delete,
                    data: { turbo_confirm: "本当に削除しますか？この店舗に紐づく運転記録がある場合は削除できません。" },
                    class: "btn btn-sm btn-error" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">
        <span>店舗が登録されていません。</span>
      </div>
    <% end %>
  </div>
</div>
