<div class="min-h-screen bg-base-200">
  <%= render "shared/navbar" %>

  <div class="container mx-auto p-4 max-w-2xl">
    <div class="breadcrumbs text-sm mb-4">
      <ul>
        <li><%= link_to "ダッシュボード", dashboard_path %></li>
        <li><%= link_to "ドライバー管理", admin_drivers_path %></li>
        <li>新規登録</li>
      </ul>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">ドライバー 新規登録</h2>

        <%= form_with(model: [:admin, @driver], class: "space-y-4") do |f| %>
          <% if @driver.errors.any? %>
            <div class="alert alert-error">
              <div>
                <span class="font-bold"><%= pluralize(@driver.errors.count, "個") %>のエラーがあります：</span>
                <ul class="list-disc list-inside mt-2">
                  <% @driver.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="form-control">
            <%= f.label :name, "名前（必須）", class: "label" %>
            <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "例：山田太郎" %>
          </div>

          <div class="form-control">
            <%= f.label :email, "メールアドレス（必須）", class: "label" %>
            <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "例：yamada@example.com" %>
          </div>

          <div class="form-control">
            <%= f.label :role, "権限（必須）", class: "label" %>
            <%= f.select :role, Driver.roles.keys.map { |k| [I18n.t("activerecord.attributes.driver.roles.#{k}"), k] }, {}, class: "select select-bordered w-full" %>
          </div>

          <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span>初期パスワードは自動生成されます。登録後に表示されるパスワードをドライバーに伝えてください。</span>
          </div>

          <div class="card-actions justify-end mt-6">
            <%= link_to "キャンセル", admin_drivers_path, class: "btn btn-ghost" %>
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
