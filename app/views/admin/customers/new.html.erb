<div class="min-h-screen bg-base-200">
  <%= render "shared/navbar" %>

  <div class="container mx-auto p-4 max-w-2xl">
    <div class="breadcrumbs text-sm mb-4">
      <ul>
        <li><%= link_to "ダッシュボード", dashboard_path %></li>
        <li><%= link_to "顧客管理", admin_customers_path %></li>
        <li>新規登録</li>
      </ul>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">顧客 新規登録</h2>

        <%= form_with(model: [:admin, @customer], class: "space-y-4") do |f| %>
          <% if @customer.errors.any? %>
            <div class="alert alert-error">
              <div>
                <span class="font-bold"><%= pluralize(@customer.errors.count, "個") %>のエラーがあります：</span>
                <ul class="list-disc list-inside mt-2">
                  <% @customer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="form-control">
            <%= f.label :name, "顧客名（必須）", class: "label" %>
            <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "例：田中" %>
          </div>

          <div class="form-control">
            <%= f.label :address, "住所", class: "label" %>
            <%= f.text_field :address, class: "input input-bordered w-full", placeholder: "例：福岡県福岡市早良区西新3-4-5" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="form-control">
              <%= f.label :latitude, "緯度", class: "label" %>
              <%= f.number_field :latitude, step: 0.000001, class: "input input-bordered w-full" %>
            </div>

            <div class="form-control">
              <%= f.label :longitude, "経度", class: "label" %>
              <%= f.number_field :longitude, step: 0.000001, class: "input input-bordered w-full" %>
            </div>
          </div>

          <div class="form-control">
            <%= f.label :phone, "電話番号", class: "label" %>
            <%= f.text_field :phone, class: "input input-bordered w-full", placeholder: "例：092-123-4567" %>
          </div>

          <div class="form-control">
            <%= f.label :notes, "備考", class: "label" %>
            <%= f.text_area :notes, rows: 3, class: "textarea textarea-bordered w-full", placeholder: "常連客など特記事項" %>
          </div>

          <div class="card-actions justify-end mt-6">
            <%= link_to "キャンセル", admin_customers_path, class: "btn btn-ghost" %>
            <%= f.submit "登録する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
