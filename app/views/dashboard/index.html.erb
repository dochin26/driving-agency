<div class="min-h-screen bg-base-200">
  <!-- ナビゲーションバー -->
  <%= render "shared/navbar" %>

  <!-- メインコンテンツ -->
  <div class="container mx-auto p-4">
    <div class="hero bg-base-100 rounded-lg shadow-xl mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">ようこそ、<%= current_driver.name %>さん</h1>
          <p class="py-6">運転代行管理システムへようこそ。今日も安全運転でお願いします。</p>
          <%= link_to "新規運転記録を登録", new_driving_record_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <!-- 統計情報 -->
    <div class="stats shadow w-full mb-6">
      <div class="stat">
        <div class="stat-title">今日の運転記録</div>
        <div class="stat-value text-primary">0件</div>
        <div class="stat-desc">合計金額: ¥0</div>
      </div>

      <div class="stat">
        <div class="stat-title">今月の運転記録</div>
        <div class="stat-value text-secondary">0件</div>
        <div class="stat-desc">合計金額: ¥0</div>
      </div>

      <div class="stat">
        <div class="stat-title">総走行距離（今月）</div>
        <div class="stat-value">0km</div>
      </div>
    </div>

    <!-- 最近の運転記録 -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">最近の運転記録</h2>
        <% if @recent_records.any? %>
          <div class="overflow-x-auto">
            <table class="table">
              <thead>
                <tr>
                  <th>出発日時</th>
                  <th>出発地点</th>
                  <th>目的地</th>
                  <th>金額</th>
                  <th>車両</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_records.each do |record| %>
                  <tr>
                    <td><%= record.departure_datetime.strftime("%Y/%m/%d %H:%M") %></td>
                    <td><%= record.store.name %></td>
                    <td><%= record.destination %></td>
                    <td>¥<%= number_with_delimiter(record.amount) %></td>
                    <td><%= record.vehicle.vehicle_number %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-center text-gray-500 py-8">まだ運転記録がありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
