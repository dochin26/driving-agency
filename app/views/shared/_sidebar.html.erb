<!-- PC/タブレット用サイドバー -->
<div class="hidden md:flex md:flex-col md:fixed md:inset-y-0 md:z-50 md:w-64 lg:w-72">
  <div class="flex flex-col flex-grow bg-primary text-primary-content overflow-y-auto">
    <!-- ロゴ/タイトル -->
    <div class="flex items-center h-16 flex-shrink-0 px-4 bg-primary-focus">
      <%= link_to dashboard_path, class: "flex items-center gap-3 w-full" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-xl font-bold">運転代行</span>
      <% end %>
    </div>

    <!-- ユーザー情報 -->
    <div class="px-4 py-4 bg-primary-focus/50">
      <div class="flex items-center gap-3">
        <div class="avatar placeholder">
          <div class="bg-neutral text-neutral-content rounded-full w-10">
            <span class="text-lg"><%= current_driver.name.first %></span>
          </div>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium truncate"><%= current_driver.name %></p>
          <p class="text-xs opacity-75">
            <%= current_driver.admin? ? "管理者" : "ドライバー" %>
          </p>
        </div>
      </div>
    </div>

    <!-- ナビゲーションメニュー -->
    <nav class="flex-1 px-2 py-4 space-y-1">
      <%= link_to dashboard_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path == dashboard_path ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        <span>ダッシュボード</span>
      <% end %>

      <%= link_to new_driving_record_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path == new_driving_record_path ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>新規登録</span>
      <% end %>

      <%= link_to driving_records_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('driving_records') && !request.path.include?('daily_report') && !request.path.include?('new') ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <span>運転記録</span>
      <% end %>

      <%= link_to daily_report_driving_records_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('daily_report') ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <span>日報</span>
      <% end %>

      <% if current_driver.admin? %>
        <div class="divider my-2 opacity-50"></div>

        <div class="px-3 py-2 text-xs font-semibold opacity-75">
          管理機能
        </div>

        <%= link_to admin_drivers_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('admin/drivers') ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <span>ドライバー管理</span>
        <% end %>

        <%= link_to admin_vehicles_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('admin/vehicles') ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
          </svg>
          <span>車両管理</span>
        <% end %>

        <%= link_to admin_stores_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('admin/stores') ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <span>店舗管理</span>
        <% end %>

        <%= link_to admin_customers_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('admin/customers') ? 'bg-primary-focus' : 'hover:bg-primary-focus/50'}" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span>顧客管理</span>
        <% end %>
      <% end %>
    </nav>

    <!-- ログアウト -->
    <div class="flex-shrink-0 p-4 border-t border-primary-focus">
      <%= button_to destroy_driver_session_path, method: :delete, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg hover:bg-primary-focus/50 transition-colors w-full" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <span>ログアウト</span>
      <% end %>
    </div>
  </div>
</div>
