<div class="min-h-screen bg-base-200">
  <%= render "shared/navbar" %>

  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">日報</h1>

    <!-- 該当データなしの警告 -->
    <% if @records.empty? %>
      <div class="alert alert-warning mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
        <span>該当するデータがありません。</span>
      </div>
    <% end %>

    <!-- 検索フォーム -->
    <div class="card bg-base-100 shadow-xl mb-6">
      <div class="card-body">
        <%= form_with url: daily_report_driving_records_path, method: :get, class: "flex flex-col md:flex-row gap-4", data: { turbo_frame: "_top" } do |f| %>
          <div class="form-control flex-1">
            <%= f.label :date, "日付", class: "label" %>
            <%= f.date_field :date, value: @date, class: "input input-bordered w-full", onchange: "this.form.requestSubmit()" %>
          </div>

          <div class="form-control flex-1">
            <%= f.label :vehicle_id, "車両", class: "label" %>
            <%= f.select :vehicle_id,
                options_from_collection_for_select(@vehicles, :id, :vehicle_number, @vehicle_id),
                { include_blank: "全ての車両" },
                class: "select select-bordered w-full",
                onchange: "this.form.requestSubmit()" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 合計 -->
    <div class="card bg-primary text-primary-content shadow-xl mb-6">
      <div class="card-body">
        <h2 class="card-title">合計</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p class="text-sm opacity-80">走行距離</p>
            <p class="text-2xl font-bold"><%= number_with_delimiter(@total_distance) %> km</p>
          </div>
          <div>
            <p class="text-sm opacity-80">金額</p>
            <p class="text-2xl font-bold">¥<%= number_with_delimiter(@total_amount) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- 日報データ -->
    <% if @records.any? %>
      <div class="space-y-4">
        <% @records.each do |record| %>
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-gray-500">出発日時</p>
                  <p class="font-semibold"><%= record.departure_datetime.strftime("%Y/%m/%d") %> (<%= I18n.t('date.abbr_day_names')[record.departure_datetime.wday] %>) <%= record.departure_datetime.strftime("%H:%M") %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">到着日時</p>
                  <p class="font-semibold"><%= record.arrival_datetime.strftime("%Y/%m/%d") %> (<%= I18n.t('date.abbr_day_names')[record.arrival_datetime.wday] %>) <%= record.arrival_datetime.strftime("%H:%M") %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">出発地点</p>
                  <p><%= record.departure_location.presence || "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">目的地</p>
                  <p><%= record.destination %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">店舗名</p>
                  <p><%= record.store&.name || "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">経由地</p>
                  <p><%= record.waypoint_location.presence || "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">走行距離</p>
                  <p><%= number_with_delimiter(record.distance) %> km</p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">金額</p>
                  <p class="text-lg font-bold">¥<%= number_with_delimiter(record.amount) %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">車両番号</p>
                  <p><%= record.vehicle&.vehicle_number || "-" %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">備考</p>
                  <p><%= record.notes.presence || "-" %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
